<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mayank.battery_status.MainActivity"
    android:background="#F2263E">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BATTERY INFO "
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Status:"
        android:id="@+id/textView2"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:paddingTop="10dp"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:editable="false"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charging Source:"
        android:id="@+id/textView3"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/source"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:editable="false"
        android:paddingTop="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temprature:"
        android:id="@+id/textView4"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temprature"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:editable="false"
        android:paddingTop="10dp"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltage:"
        android:id="@+id/textView5"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voltage"
        android:editable="false"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charging Status:"
        android:id="@+id/textView6"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/voltage"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <EditText
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:editable="false"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>
